type User = 
 record {
   id: text;
   username: text;
 };

type Question =
 record {
   id: text;
   author: User;
   text: text;
   interest: int32;
 };

service : {
    "add_user": (text) -> (User);
    "get_user": (text) -> (User) query;  
    "get_users": () -> (vec User) query; 
    "add_question": (text, text) -> (Question);
    "get_question": (text) -> (Question) query;
    "get_questions": () -> (vec Question) query;
}